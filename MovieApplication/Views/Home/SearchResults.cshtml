@*@model MovieApplication.Models.OmdbSearchResult *@

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <h1>Search Results</h1>

    @if (Model.Search != null && Model.Search.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Year</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Search)
                {
                    <tr>
                        <td>
                            <img src="@movie.Poster" alt="@movie.Title" style="width: 100px;" />
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="MovieDetails" asp-route-id="@movie.imdbID">@movie.Title</a>
                        </td>
                        <td>@movie.Year</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No search results found.</p>
    }
</div>
